<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Content/css/Login.css" rel="stylesheet" />

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutSafe.cshtml";
}

@if (TempData["ClienteRegisterUserMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["ClienteRegisterUserMessage"]
    </div>
}



<html>
<head>
    <title>Login Component</title>

</head>


<body>
    <hr />
    <hr />
    <hr />
    <hr />
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container rounded-circle">
                        <img src="https://cdn.discordapp.com/attachments/480216222592532502/1139621585439961128/WhatsApp_Image_2023-08-09_at_5.03.49_PM.jpeg" class="brand_logo" alt="Logo" style="max-width: 100%; max-height: 100%;">
                        <br />
                        <br />
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    <form action="/Seguridad/LoginUsuario" method="post" class="form-container" id="logins">
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" name="user" class="form-control input_user" value="" placeholder="Usuario">
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="password" class="form-control input_pass" value="" placeholder="Contraseña">
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <p style="color: #FF2B00; margin-bottom: 8px; font-weight: bold">@ViewBag.ErrorMessage</p>
                        }
                        <input for="logins" type="submit" value="Log In" class="btn btn-success" style="background: green; text-align:center">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


</html>
