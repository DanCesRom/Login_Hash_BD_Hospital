@{
    string NombreUsuario = Session["NombreUsuario"] as string;
    string NivelUsuario = Session["NivelUsuario"] as string;
}



<!DOCTYPE html>
 <html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom border-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Login", "Seguridad", new { area = "" })">
                <img src="https://cdn.discordapp.com/attachments/480216222592532502/1139295146140246087/Temporal_Beta_Test.jpeg" alt="Farmacia Helse Safe" style="max-height: 180px; max-width: 340px;" />
            </a>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                </ul>
            </div>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <a class="navbar-nav flex-grow-1">
                        <h1 style="font-weight: bold; font-size: 20px;">
                            Sistema de Gestión de Historiales Clínicos y Programación de Cirugías
                        </h1>

                </a>
            </div>  

        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

